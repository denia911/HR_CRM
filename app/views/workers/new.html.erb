<div class="center jumbotron">
  <h1>New worker</h1>
<%= form_with model: [ @company, @workers.build ], local: true do |form| %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
</div>
<%= link_to "Back", company_path(@company) %>
